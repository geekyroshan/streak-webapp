{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node", "config": { "runtime": "nodejs18.x" } },
    { "src": "api.js", "use": "@vercel/node", "config": { "runtime": "nodejs18.x" } }
  ],
  "routes": [
    { "src": "/simple", "dest": "/api/simple.js" },
    { "src": "/api-test", "dest": "/api.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/api/github-login", "dest": "/api/github-login.js" },
    { "src": "/api/auth/github/test-callback", "dest": "/api/auth/github/test-callback.js" },
    { "src": "/api/auth/github/callback", "dest": "/api/auth/github/callback.js" },
    { "src": "/api/auth/github", "dest": "/api/auth/github.js" },
    { "src": "/api/health", "dest": "/api/health/index.js" },
    { "src": "/api/auth", "dest": "/api/auth/index.js" },
    { "src": "/api", "dest": "/api/index.js" },
    { "src": "/test", "dest": "/public/test.html" },
    { "src": "/token-handler.js", "dest": "/public/token-handler.js" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg|ttf|woff|woff2|html)$)", "dest": "/dist/$1" },
    
    { "src": "/streak", "dest": "/dist/index.html" },
    { "src": "/repositories", "dest": "/dist/index.html" },
    { "src": "/activity", "dest": "/dist/index.html" },
    { "src": "/settings", "dest": "/dist/index.html" },
    { "src": "/calendar", "dest": "/dist/index.html" },
    { "src": "/dashboard", "dest": "/dist/index.html" },
    { "src": "/logout", "dest": "/dist/index.html" },
    
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}