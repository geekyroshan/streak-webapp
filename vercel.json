{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg|ttf|woff|woff2)$)", "dest": "/dist/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}