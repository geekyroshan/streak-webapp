{
  "version": 2,
  "builds": [
    { 
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    { 
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": { 
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/auth/github/callback", "dest": "/api/auth/github/callback.js" },
    { "src": "/api/auth/github", "dest": "/api/auth/github.js" },
    { "src": "/api/auth", "dest": "/api/auth/index.js" },
    { "src": "/api/health", "dest": "/api/health/index.js" },
    { "src": "/api/github-login", "dest": "/api/github-login.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/api", "dest": "/api/index.js" },
    { 
      "src": "/assets/(.*)", 
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1" 
    },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}