{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node", "config": { "runtime": "nodejs18.x" } }
  ],
  "routes": [
    { "src": "/api/simple", "dest": "/api/simple.js" },
    { "src": "/api-test", "dest": "/api.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/api/github-login", "dest": "/api/github-login.js" },
    { "src": "/api/auth/github/test-callback", "dest": "/api/auth/github/test-callback.js" },
    { "src": "/api/auth/github/callback", "dest": "/api/auth/github/callback.js" },
    { "src": "/api/auth/github", "dest": "/api/auth/github.js" },
    { "src": "/api/health", "dest": "/api/health/index.js" },
    { "src": "/api/auth", "dest": "/api/auth/index.js" },
    { "src": "/api", "dest": "/api/index.js" },
    
    { "src": "/static/(.*)", "dest": "/dist/static/$1" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/favicon.ico", "dest": "/dist/favicon.ico" },
    { "src": "/manifest.json", "dest": "/dist/manifest.json" },
    { "src": "/robots.txt", "dest": "/dist/robots.txt" },
    
    { "handle": "filesystem" },
    
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}