{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "server/src/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.+)",
      "dest": "/api/auth/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.[a-z0-9]+$)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@MONGODB_URI",
    "JWT_SECRET": "@JWT_SECRET",
    "FRONTEND_URL": "@FRONTEND_URL",
    "GITHUB_CLIENT_ID": "@GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET": "@GITHUB_CLIENT_SECRET",
    "GITHUB_REDIRECT_URI": "@GITHUB_REDIRECT_URI",
    "NODE_ENV": "production"
  }
}
