# Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/streak-manager
# For production, use your MongoDB Atlas or other cloud provider URI
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/streak-manager

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:5002/api/auth/github/callback
# For production, update to your domain
# GITHUB_REDIRECT_URI=https://your-backend-domain.com/api/auth/github/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173
# For production, add your frontend domain
# ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:5173

# Scheduler Configuration
SCHEDULER_ENABLED=true
# Set to false temporarily to disable the scheduler if needed

# Timezone Configuration (for scheduled jobs)
TZ=UTC 